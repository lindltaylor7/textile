<IfModule mod_rewrite.c>
    RewriteEngine On
    # Prioridad: archivos físicos en public/
    RewriteCond %{DOCUMENT_ROOT}/textile/public/$1 -f
    RewriteRule ^(.*)$ public/$1 [L]

    # Todo lo demás al puente index.php de la raíz
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [L]
</IfModule>
